#!/usr/bin/gnuplot -persist
se xla "target level of the general"
se yla "amount of 50k (green) books required" tc rgb "#00A000"
se log y
se grid
se label 1 "  1000 green books =" at 40, 6000 tc rgb "#00A000"
se label 2 "= 500 gold books  ="  at 40, 3000 tc rgb "#A0A000"
se label 3 "= 200 red books    "  at 40, 1500 tc rgb "#A00000"
se te png
se ou "gen_level.png"
se ke le Le rev
p [38:160][1:100000] "< awk '{n+=$2; if (NF>=2 && $1<=155) print $1+1, $2, n, (n/50000)}' gen_level | grep -v awk" \
u ($1):($4) t "from level 0", "" u ($1):($2/50000) t "from previous level"
se ou
exit

